#!/usr/bin/env bash
set -eux

make ARCH=x86_64 llvm
make ARCH=aarch64 llvm
rm -f cosmo.setup.*

export MODE=
export MODE_AARCH64=aarch64
export BASELOC=$(realpath $PWD)
export COSMO=$BASELOC/cosmopolitan
export COSMOS_X86=$BASELOC/cosmos/x86_64
export COSMOS_AARCH64=$BASELOC/cosmos/aarch64
export CONFIGDIR=$BASELOC/dummy
export RESULTS=$BASELOC/results

APELINK=$COSMO/o//tool/build/apelink.com
APELINKFLAGS=

apelinkpls () {
    OUTPUT="$1"
    OUTPUT_X86_64="$2"
    OUTPUT_AARCH64="$3"
    OLDNAME_X86_64="$(basename -- $OUTPUT_X86_64)"
    OLDNAME_AARCH64="$(basename -- $OUTPUT_AARCH64)"
    TARG_FOLD="$(dirname $OUTPUT)"
    "$COSMO/o/tool/build/apelink.com" -l "$COSMO/o/$MODE/ape/ape.elf" \
        -l "$COSMO/o/$MODE_AARCH64/ape/ape.elf" \
        -M "$COSMO/ape/ape-m1.c" \
        -o "$OUTPUT" \
        "$OUTPUT_X86_64" \
        "$OUTPUT_AARCH64"
    cp "$OUTPUT_X86_64" "$TARG_FOLD/$OLDNAME_X86_64.x86_64"
    cp "$OUTPUT_AARCH64" "$TARG_FOLD/$OLDNAME_AARCH64.aarch64"
}

echo "creating fat APEs"
mkdir -p "$CONFIGDIR"
mkdir -p "$RESULTS"

cd $BASELOC
ls -al ./

FILELIST='
bin/FileCheck
bin/UnicodeNameMappingGenerator
bin/apinotes-test
bin/arcmt-test
bin/bugpoint
bin/clang-15
bin/clang-ast-dump
bin/clang-check
bin/clang-diff
bin/clang-extdef-mapping
bin/clang-format
bin/clang-fuzzer-dictionary
bin/clang-import-test
bin/clang-linker-wrapper
bin/clang-nvlink-wrapper
bin/clang-offload-bundler
bin/clang-offload-packager
bin/clang-offload-wrapper
bin/clang-refactor
bin/clang-rename
bin/clang-scan-deps
bin/clang-tblgen
bin/count
bin/diagtool
bin/dsymutil
bin/llc
bin/llvm-PerfectShuffle
bin/llvm-ar
bin/llvm-as
bin/llvm-bcanalyzer
bin/llvm-c-test
bin/llvm-cat
bin/llvm-cfi-verify
bin/llvm-config
bin/llvm-cov
bin/llvm-cvtres
bin/llvm-cxxdump
bin/llvm-cxxfilt
bin/llvm-cxxmap
bin/llvm-diff
bin/llvm-dis
bin/llvm-dlang-demangle-fuzzer
bin/llvm-dwarfdump
bin/llvm-dwarfutil
bin/llvm-dwp
bin/llvm-extract
bin/llvm-gsymutil
bin/llvm-ifs
bin/llvm-isel-fuzzer
bin/llvm-itanium-demangle-fuzzer
bin/llvm-libtool-darwin
bin/llvm-link
bin/llvm-lipo
bin/llvm-lto
bin/llvm-lto2
bin/llvm-mc
bin/llvm-mca
bin/llvm-microsoft-demangle-fuzzer
bin/llvm-ml
bin/llvm-modextract
bin/llvm-mt
bin/llvm-nm
bin/llvm-objcopy
bin/llvm-objdump
bin/llvm-opt-fuzzer
bin/llvm-opt-report
bin/llvm-pdbutil
bin/llvm-profdata
bin/llvm-profgen
bin/llvm-rc
bin/llvm-reduce
bin/llvm-remark-size-diff
bin/llvm-rust-demangle-fuzzer
bin/llvm-sim
bin/llvm-size
bin/llvm-special-case-list-fuzzer
bin/llvm-split
bin/llvm-stress
bin/llvm-strings
bin/llvm-tapi-diff
bin/llvm-tblgen
bin/llvm-tli-checker
bin/llvm-undname
bin/llvm-xray
bin/llvm-yaml-numeric-parser-fuzzer
bin/llvm-yaml-parser-fuzzer
bin/not
bin/obj2yaml
bin/opt
bin/sancov
bin/sanstats
bin/split-file
bin/verify-uselistorder
bin/yaml-bench
bin/yaml2obj
'

mkdir -p $RESULTS/bin

for EXE in $FILELIST; do
    apelinkpls $RESULTS/$EXE.com\
        $COSMOS_X86/$EXE\
        $COSMOS_AARCH64/$EXE
done
